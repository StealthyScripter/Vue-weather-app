{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Vue Weather improved backend",
  "homepage": "https://github.com/StealthyScripter/Vue-weather-app#readme",
  "bugs": {
    "url": "https://github.com/StealthyScripter/Vue-weather-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StealthyScripter/Vue-weather-app.git"
  },
  "license": "ISC",
  "author": "Wendot",
  "type": "commonjs",
  "main": "app.ts",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "db:logs": "docker-compose logs -f postgres",
    "db:shell": "docker-compose exec postgres psql -U postgres -d myapp",
    "setup": "npm run db:start && sleep 3 && npm start"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.10",
    "pg-promise": "^11.15.0",
    "pug": "^3.0.3",
    "uuid": "^11.1.0"
  }
}
